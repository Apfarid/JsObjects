
// *************
// Panels
// *************

mixin elfFormPanel(title)

	form&attributes(attributes)
		div.panel.panel-default
			div.panel-heading= title
			div.panel-body
				block

mixin elfPanel(headingText)
	div.panel.panel-default
		div.panel-heading= headingText
		div.panel-body
			block

// **********
// Radio Buttons
// **********

mixin elfRadioPanel(headingText, panelId)
	div.panel.panel-default
		div.panel-heading= headingText
		div.panel-body
			div(role="group", id= panelId)
				block

mixin elfRadio(labelText, valueId)
	.radio
		label(for=valueId) 
			input(type='radio', name='radio', value=valueId, id=valueId) 
			strong #{labelText}

// **********
// CheckBoxes
// **********

mixin elfCheckBox(labelText, name, value)
	div
		input(type='checkbox', name=name value=value)&attributes(attributes)
		label(for='#{name}') &nbsp; #{labelText}

// **************
// Input Controls
// **************

mixin elfInput(labelText, name, placeHolder)
	div
		label(for='subject') #{labelText}
		input(type='text', name=name, placeholder=placeHolder)&attributes(attributes)

mixin elfInputA(labelText, name, placeHolder)
	div.row
		label.col-md-2.control-label(for='textinput') #{labelText}
		.col-md-8
			input.form-control.input-md(name=name, type='text', placeholder=placeholder)&attributes(attributes)

mixin elfInputB(labelText, name, placeHolder)
	div.row
		h4
			span.col-md-2.label.label-success #{labelText}
		.col-md-10
			input.form-control.input-md(name=name, type='text', placeholder=placeholder)&attributes(attributes)
