#!/bin/bash

function checkStatus {
	pwd
	if [ -n "$(git status --porcelain)" ]; then
	  echo "there are changes";
	  exit;
	else
	  echo "no changes";
	  git pull
	fi
}

echo "================"
cd $GIT_HOME/JsObjects
checkStatus

echo "================"
cd $GIT_HOME/writings
checkStatus

echo "================"
cd $GIT_HOME/CloudNotes
checkStatus

echo "================"
cd $GIT_HOME/charliecalvert.github.io
checkStatus

echo "================"
cd $GIT_HOME/prog109-calvert-2018
checkStatus

echo "================"
cd $GIT_HOME/prog109-notes
checkStatus

echo "================"
cd $GIT_HOME/isit320-calvert-2018
checkStatus
